rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own alerts
    match /users/{userId}/alerts/{alertId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read/write their own triggered alerts
    match /users/{userId}/triggeredAlerts/{triggeredAlertId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read their own profile data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read devices they own or have access to
    match /devices/{deviceId} {
      allow read: if request.auth != null && 
        (resource.data.ownerId == request.auth.uid || 
         request.auth.uid in resource.data.sharedWith);
      allow write: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }
    
    // Allow reading sensor data for devices user has access to
    match /devices/{deviceId}/sensors/{sensorId} {
      allow read: if request.auth != null && 
        (get(/databases/$(database)/documents/devices/$(deviceId)).data.ownerId == request.auth.uid ||
         request.auth.uid in get(/databases/$(database)/documents/devices/$(deviceId)).data.sharedWith);
    }
    
    // Chat messages for users
    match /users/{userId}/chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      match /messages/{messageId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
