          }
        },
        
        "schedules": {
          ".read": "auth != null && root.child('users').child(auth.uid).child('devices').hasChild($deviceId)",
          ".write": "auth != null && root.child('users').child(auth.uid).child('devices').hasChild($deviceId)",
          
          "$scheduleId": {
            ".read": "auth != null && root.child('users').child(auth.uid).child('devices').hasChild($deviceId)",
