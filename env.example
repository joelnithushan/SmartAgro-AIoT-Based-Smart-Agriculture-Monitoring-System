# ===========================================
# SmartAgro - Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control!

# ===========================================
# CLIENT (Frontend) - Firebase Config
# ===========================================
# These variables are prefixed with VITE_ for Vite to expose them to the client
# Get these values from Firebase Console > Project Settings > General > Your apps

# Firebase API Key
VITE_FIREBASE_API_KEY=your_firebase_api_key_here

# Firebase Auth Domain (usually project-id.firebaseapp.com)
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com

# Firebase Project ID
VITE_FIREBASE_PROJECT_ID=your-project-id

# Firebase Storage Bucket (usually project-id.appspot.com)
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Firebase Messaging Sender ID
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id

# Firebase App ID
VITE_FIREBASE_APP_ID=your_firebase_app_id

# ===========================================
# BACKEND (Node.js) - Firebase Admin SDK
# ===========================================
# These are used for server-side Firebase operations
# Get these from Firebase Console > Project Settings > Service Accounts

# Firebase Project ID (same as client)
FIREBASE_PROJECT_ID=your-project-id

# Firebase Client Email (from service account)
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com

# Firebase Private Key (from service account JSON)
# IMPORTANT: Wrap in quotes and include \n for line breaks
# Example: "-----BEGIN PRIVATE KEY-----\nMIIEvQIBADANBgkqhkiG9w0BAQEFAASCBKcwggSjAgEAAoIBAQC...\n-----END PRIVATE KEY-----\n"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Server Port (default: 5000)
PORT=5000

# Node Environment (development/production)
NODE_ENV=development

# ===========================================
# EXTERNAL APIs
# ===========================================

# Google Gemini API Key (for AI Chatbot)
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Firebase Realtime Database URL (if using)
FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com/

# ===========================================
# CORS CONFIGURATION
# ===========================================

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# JWT Secret (for custom token generation if needed)
JWT_SECRET=your_jwt_secret_here

# Admin Email (for role-based access)
ADMIN_EMAIL=joelnithushan6@gmail.com

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================

# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=5242880

# Allowed file types for uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===========================================
# EMAIL CONFIGURATION (if using email notifications)
# ===========================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ===========================================
# RATE LIMITING
# ===========================================

# Rate limit window (in milliseconds)
RATE_LIMIT_WINDOW=900000

# Rate limit max requests per window
RATE_LIMIT_MAX=100

# ===========================================
# CACHE CONFIGURATION
# ===========================================

# Redis URL (if using Redis for caching)
REDIS_URL=redis://localhost:6379

# Cache TTL (time to live in seconds)
CACHE_TTL=3600

# ===========================================
# MONITORING & ANALYTICS
# ===========================================

# Google Analytics ID (if using)
GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN (for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================

# Enable debug mode
DEBUG=true

# Enable API documentation
ENABLE_SWAGGER=true

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# Uncomment and modify these for production deployment

# PRODUCTION_FRONTEND_URL=https://your-domain.com
# PRODUCTION_PORT=8080
# PRODUCTION_NODE_ENV=production
# PRODUCTION_LOG_LEVEL=warn