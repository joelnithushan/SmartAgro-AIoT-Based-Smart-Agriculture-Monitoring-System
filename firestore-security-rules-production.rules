rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow admin access
      allow read, write: if request.auth != null && request.auth.token.email == 'joelnithushan6@gmail.com';
    }
    
    // Device requests - users can access their own requests, admins can access all
    match /deviceRequests/{requestId} {
      allow read, write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         request.auth.token.email == 'joelnithushan6@gmail.com');
      
      // Allow creation for authenticated users
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // Devices collection - only admins can access
    match /devices/{deviceId} {
      allow read, write: if request.auth != null && 
        request.auth.token.email == 'joelnithushan6@gmail.com';
    }
    
    // Notifications - users can only access their own notifications
    match /notifications/{userId}/items/{notificationId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow admin access
      allow read, write: if request.auth != null && 
        request.auth.token.email == 'joelnithushan6@gmail.com';
    }
    
    // Sensor data - users can only access data from their assigned devices
    match /sensorData/{deviceId}/readings/{readingId} {
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.devices.hasAny([deviceId]);
      
      // Allow admin access
      allow read, write: if request.auth != null && 
        request.auth.token.email == 'joelnithushan6@gmail.com';
    }
    
    // Admin-only collections
    match /admin/{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.email == 'joelnithushan6@gmail.com';
    }
    
    // System configuration - admin only
    match /system/{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.email == 'joelnithushan6@gmail.com';
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
